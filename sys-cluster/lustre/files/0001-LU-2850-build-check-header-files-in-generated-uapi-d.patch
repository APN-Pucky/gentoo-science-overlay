+        [LB_CHECK_FILE([$LINUX_OBJ/include/linux/version.h],[LINUXVERSION_HDIR=linux],
+	[AC_MSG_ERROR([Run make config in $LINUX.])])])
+        AC_SUBST(LINUXVERSION_HDIR)
 
 # ----------- kconfig.h exists ---------------
