CFLAGS="-I/usr/include/mkl"
CLIBS="-L/usr/$(get_libdir)/blas/mkl -lmkl_cblas"

setup() {

MY_LIBDIR="$(get_libdir)"

einfo "/usr/${MY_LIBDIR}/libcblas.so -> libmkl_cblas.so"
ln -sf blas/mkl/libmkl_cblas.so /usr/${MY_LIBDIR}/libcblas.so

einfo "/usr/${MY_LIBDIR}/libcblas.so.0 -> libmkl_blas.so"
ln -sf blas/mkl/libmkl_cblas.so /usr/${MY_LIBDIR}/libcblas.so.0

einfo "/usr/${MY_LIBDIR}/libcblas.a -> libmkl_blas.a"
ln -sf blas/mkl/libmkl_cblas.a /usr/${MY_LIBDIR}/libcblas.a

}
